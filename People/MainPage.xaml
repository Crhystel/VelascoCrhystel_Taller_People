<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:People.ViewModels"
             x:Class="People.MainPage" 
             BackgroundColor="{DynamicResource Light}">
    <ContentPage.BindingContext>
        <viewmodels:CVelascoMPViewModel/>
    </ContentPage.BindingContext>

    <Grid Padding="5" RowSpacing="5" ColumnSpacing="5"
          RowDefinitions="Auto,Auto,Auto,Auto,*">

        <Entry x:Name="crhystelPerson"
               Text="{Binding cvPerson.Name}"
           Placeholder="Enter name" />

        <Button Text="Agregar Person"
            Grid.Row="1"
            Command="{Binding ComandoAgregar}" />

        <Label x:Name="statusMessage"
           TextColor="{StaticResource Primary}"
           Grid.Row="2" />

        <Button Text="Get All People"
            Grid.Row="3"
            Clicked="OnGetButtonClicked" />

        <CollectionView x:Name="peopleList" Grid.Row="4">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:CVPerson">
                    <Grid ColumnDefinitions="*,2*">
                        <Label Text="{Binding Id}" TextColor="{StaticResource Primary}"/>
                        <Label Grid.Column="1" Text="{Binding Name}" TextColor="{StaticResource Primary}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
