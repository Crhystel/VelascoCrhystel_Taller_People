<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:People.ViewModels"
             x:Class="People.CVTarjetaPage"
             x:Name="this"
             BackgroundColor="White">
    <ContentPage.BindingContext>
        <viewmodel:CVelascoTarjetaViewModel />
    </ContentPage.BindingContext>

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Border BackgroundColor="LightPink"
                StrokeThickness="1"
                Padding="40"
                Margin="40">
            <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="Auto, *" ColumnSpacing="10">
                <Image Grid.RowSpan="2"
                       Source="{Binding CVTarjeta.ImageUrl}"
                       Aspect="AspectFill"
                       HeightRequest="120"
                       WidthRequest="120"
                       BackgroundColor="Black" />

                <Label Grid.Row="0" Grid.Column="1"
                       Text="{Binding CVTarjeta.Name}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Center" />

                <Label Grid.Row="1" Grid.Column="1"
                       Text="{Binding CVTarjeta.Age, StringFormat='Edad: {0}'}"
                       FontSize="16"
                       TextColor="Black"
                       VerticalOptions="Center" />
            </Grid>
        </Border>
    </StackLayout>
</ContentPage>
